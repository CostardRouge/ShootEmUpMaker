<Window x:Class="ShootEmUpMaker.MakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shoot'em up Maker" Height="350" Width="725">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="Banner">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </ItemsPanelTemplate>

        <ControlTemplate x:Key="BannerItem" TargetType="{x:Type ListBoxItem}">
            <Grid x:Name="grid" Margin="25,0" Width="{TemplateBinding Width}">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver"/>
                        <VisualState x:Name="Disabled"/>
                    </VisualStateGroup>
                    <VisualStateGroup x:Name="SelectionStates">
                        <VisualState x:Name="Unselected"/>
                        <VisualState x:Name="Selected">
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" Storyboard.TargetName="label">
                                    <EasingColorKeyFrame KeyTime="0" Value="Black"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="SelectedUnfocused">
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" Storyboard.TargetName="label">
                                    <EasingColorKeyFrame KeyTime="0" Value="Black"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                    <VisualStateGroup x:Name="FocusStates">
                        <VisualState x:Name="Unfocused"/>
                        <VisualState x:Name="Focused"/>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <Label x:Name="label" Content="{TemplateBinding Content}" Margin="0" Width="{TemplateBinding Width}" FontWeight="Bold" Foreground="White" Cursor="Hand" Background="#00136636" BorderBrush="Black" />
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <DockPanel LastChildFill="True" Background="#FFECECEC">
        <ListBox SelectedIndex="0" DockPanel.Dock="Top" BorderBrush="#FFA41818" BorderThickness="0,0,0,1" ItemsPanel="{DynamicResource Banner}" Background="#FFCD3737" Height="35">
            <ListBoxItem Content="Preview game" Template="{DynamicResource BannerItem}" ToolTip="Show as thumbnails." ></ListBoxItem>
            <ListBoxItem Content="Export game" Template="{DynamicResource BannerItem}" ToolTip="Show as list and thumbnails." ></ListBoxItem>
        </ListBox>
        <!--
        <Border DockPanel.Dock="Bottom" BorderThickness="0,1,0,0" BorderBrush="#FFF1F1F1">
            <StatusBar x:Name="BottomStatusBar" Height="32" Background="White">
                <TextBlock HorizontalAlignment="Center">
                <Hyperlink x:Name="ApplicationLink" NavigateUri="https://github.com/CostardRouge/Piny">Piny</Hyperlink>
                <Run>created by</Run>
                <Hyperlink x:Name="DeveloperLink" NavigateUri="https://github.com/CostardRouge">CostardRouge</Hyperlink>
                <Run>.</Run>
                </TextBlock>
            </StatusBar>
        </Border>
        -->

           <ScrollViewer x:Name="ThumbnailsViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Padding="0,0,0,5" Background="White" Width="172">
                <StackPanel>
                <TextBlock Background="#FF525252"
                            Text="Menu" VerticalAlignment="Center" 
                           ToolTip="Click here to create a new game" FontSize="18" 
                           Foreground="White" FontWeight="Thin" Height="80" Margin="5,5,5,0"/>


                <TextBlock Background="#FF525252"
                           Text="Level 1" VerticalAlignment="Center" 
                           ToolTip="Click here to create a new game" FontSize="18" 
                           Foreground="White" FontWeight="Thin" Height="80" Margin="5,5,5,0"/>

                <TextBlock x:Name="CreateNewLevelButton" Background="#FF525252"
                           Text="+" VerticalAlignment="Center" 
                           ToolTip="+" FontSize="18" 
                           Foreground="White" FontWeight="Thin" Height="80" Margin="5,5,5,0"/>
                   
                </StackPanel>

            </ScrollViewer>
        
        <Grid>
            <Label x:Name="InformationsText" HorizontalAlignment="Center" VerticalAlignment="Center">
                content
            </Label>

            
        </Grid>

    </DockPanel>
</Window>
