<Window x:Class="ShootEmUpMaker.MakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shoot'em up Maker" Height="725" Width="800">
    
    <Window.Resources>
        <ItemsPanelTemplate x:Key="Banner">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </ItemsPanelTemplate>

        <ControlTemplate x:Key="BannerItem" TargetType="{x:Type ListBoxItem}">
            <Grid x:Name="grid" Margin="25,0" Width="{TemplateBinding Width}">
                <VisualStateManager.VisualStateGroups>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="MouseOver"/>
                        <VisualState x:Name="Disabled"/>
                    </VisualStateGroup>
                    <VisualStateGroup x:Name="SelectionStates">
                        <VisualState x:Name="Unselected"/>
                        <VisualState x:Name="Selected">
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" Storyboard.TargetName="label">
                                    <EasingColorKeyFrame KeyTime="0" Value="Black"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                        <VisualState x:Name="SelectedUnfocused">
                            <Storyboard>
                                <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)" Storyboard.TargetName="label">
                                    <EasingColorKeyFrame KeyTime="0" Value="Black"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </VisualState>
                    </VisualStateGroup>
                    <VisualStateGroup x:Name="FocusStates">
                        <VisualState x:Name="Unfocused"/>
                        <VisualState x:Name="Focused"/>
                    </VisualStateGroup>
                </VisualStateManager.VisualStateGroups>
                <Label x:Name="label" Content="{TemplateBinding Content}" Margin="0" Width="{TemplateBinding Width}" FontWeight="Thin" Foreground="White" Cursor="Hand" Background="#00136636" BorderBrush="Black" />
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <DockPanel LastChildFill="True" Background="#FFECECEC">
        <Grid DockPanel.Dock="Top" Background="#FFCD3737" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="384"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#FFA41818" BorderThickness="0,0,0,1">
                <TextBlock x:Name="GameNameTexBlock" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Padding="10,0,5,0" TextWrapping="Wrap" TextTrimming="CharacterEllipsis" FontWeight="Thin" >Your game title is here (5 levels)</TextBlock>
            </Border>
            <ListBox SelectedIndex="0" BorderBrush="#FFA41818" BorderThickness="0,0,0,1" ItemsPanel="{DynamicResource Banner}" Height="48" Grid.ColumnSpan="2" Grid.Column="1" Background="{x:Null}">
                <ListBoxItem Content="Preview game" Template="{DynamicResource BannerItem}" ToolTip="Preview the current game..." ></ListBoxItem>
                <ListBoxItem Content="Export game" Template="{DynamicResource BannerItem}" ToolTip="Export the current game..." ></ListBoxItem>
            </ListBox>
        </Grid>

        <ScrollViewer x:Name="PanelSwitcherViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" Padding="0,0,0,5" Background="White" Width="172">
            <StackPanel x:Name="PanelSwitcher">
                <TextBlock
                        x:Name="GeneralSettingsTextBlock"
                        Text="Game general settings" VerticalAlignment="Center" Background="#FF525252"
                        ToolTip="Click here to create a new game" FontSize="18"  Cursor="Hand"
                        Foreground="White" FontWeight="Thin" Height="160" Margin="5,5,5,0" TextWrapping="Wrap" Padding="10,20"/>

                <TextBlock
                        x:Name="MenuAndPlayerTextBlock"
                        Text="Menu and player settings" VerticalAlignment="Center" Background="#FF525252"
                        ToolTip="Click here to create a new game" FontSize="18"  Cursor="Hand"
                        Foreground="White" FontWeight="Thin" Height="160" Margin="5,5,5,0" TextWrapping="Wrap" Padding="10,20"/>
              
                <TextBlock
                        x:Name="CreateNewLevelButton"
                        Text="Add the first level..." VerticalAlignment="Center" Background="#FF525252"
                        ToolTip="Click here to create a new game" FontSize="18"  Cursor="Hand"
                        Foreground="White" FontWeight="Thin" Height="160" Margin="5,5,5,0" TextWrapping="Wrap" Padding="10,20"/>

            </StackPanel>

        </ScrollViewer>
        
        <Grid x:Name="Panels">
            <Label Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Thin" FontSize="36">
                Create your own Shoot'em up game :)
            </Label>

            <StackPanel DataContext="{Binding myBinding}" x:Name="GeneralSettingsPanel" Visibility="Hidden" Margin="100,0">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Game name :
                </Label>

                <TextBox x:Name="gameNameTextBox" />

                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Game description :
                </Label>
                <TextBox x:Name="gameDescriptionTextbox" />

                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Game author :
                </Label>
                <TextBox x:Name="gameAuthorTextbox" />
            </StackPanel>

            <StackPanel x:Name="MenuAndPlayerPanel" Visibility="Hidden" Margin="100,0">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Player sprite :
                </Label>
                <TextBox x:Name="playerSpriteTextBox" />

                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Weapon sprite :
                </Label>
                <TextBox x:Name="weaponSpriteTextbox" />

                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Player life :
                </Label>
                <TextBox x:Name="playerLifeTextbox" />
            </StackPanel>

            <StackPanel x:Name="LevelPanel" Visibility="Hidden" Margin="100,0">
                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Level name :
                </Label>
                <TextBox x:Name="levelNameTextBox" />

                <Label HorizontalAlignment="Center" VerticalAlignment="Center">
                    Level description :
                </Label>
                <TextBox x:Name="levelDescriptionTextbox" />

            </StackPanel>
        </Grid>

    </DockPanel>
</Window>
